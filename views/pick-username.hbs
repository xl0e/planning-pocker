<div class="container mt-3">
  <div class="row">
    <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12">
      <form method="POST" action="/pick-username">
        <input type="hidden" name="redirect" value="{{redirect}}" />
        <div class="form-group">
          <label for="username">Provide your name:</label>
          <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" id="username"
            value="{{username}}" required="required" />
          {{#if errors.username}}
          <div id="usernameFeedback" class="invalid-feedback">
            {{errors.username.msg}}
          </div>
          {{/if}}
        </div>
        <div class="text-left">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>